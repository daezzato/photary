<%- include('partials/headerProfile') -%>

<div class="flash-container">
	<% if (messages.success) { %>
		<div id='flash-message' class="alert-success">
			<%= messages.success %>
		</div>
	<% } %>
</div>

<div class="user-container">
	<h1 class="user-intro">Hello <%= user.userName %></h1>
</div>

<div class="create-album-container">
	<form action="/profile/createAlbum" method="POST" class="create-album">
		<label for="create-album">Album Name</label>
		<input type="text" class="createAlbum" name="album">
		<button type="submit" class="create-btn">Create</button>
	</form>

</div>

<br>

<div class="countries-album-container">
	<h1 class="countries-album-tag">Albums</h1>
	<div class="countries-album">
		<div class="albums-grid">
			<% for (let i=0; i < albums.length; i++) { %>
				<div class="album-item">
					<img class="album-item-image" src="/img/fotos.png">
					<h1 class="album-item-title"><%= albums[i].title %></h1>
					<div class="album-item-buttons">
						<a href="/profile/albums/<%=albums[i]._id %>"><button type="submit" class="view-btn">View</button></a>
						<form action="/profile/deleteAlbum/<%= albums[i].id %>?_method=DELETE" method="POST">
          	<button class="delete-btn" type="submit">Delete</button>
        		</form>
					</div>
				</div>
			<% } %>
		</div>
	</div>

</div>

<script>
	setTimeout(() => {
		const flashMessage = document.getElementById('flash-message')
		flashMessage.classList.add('fade-out')
	}, 3000)
</script>

